{
  "name": "sql-migrate-up",
  "version": "3.0.0",
  "description": "Simple SQL Migration tool",
  "main": "build/index.js",
  "types": "build/lib/index.d.ts",
  "scripts": {
    "prebuild": "rimraf ./build",
    "build": "rollup --config rollup.config.ts --configPlugin @rollup/plugin-typescript",
    "compile": "tsc --project tsconfig.json --noEmit",
    "compile:watch": "npm run compile -- --watch",
    "lint": "eslint .",
    "release": "npm run test && npm run lint && npm run build && release-it --git.commit --git.tag --git.push",
    "test": "NODE_ENV=test jest --verbose",
    "test:coverage": "NODE_ENV=test jest --verbose --coverage",
    "test:watch": "NODE_ENV=test jest --verbose --watchAll"
  },
  "keywords": [
    "migration",
    "migrate",
    "migrator",
    "sql",
    "postgresql",
    "snowflake"
  ],
  "author": "Alexey Novikov <v@2dubs.com>",
  "license": "MIT",
  "dependencies": {
    "commander": "^12.0.0",
    "fp-ts": "^2.13.1",
    "io-ts": "^2.2.21",
    "io-ts-excess": "^1.0.1",
    "io-ts-types": "^0.5.19",
    "luxon": "^3.3.0",
    "mkdirp": "^3.0.0",
    "slugify": "^1.6.5"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/better-sqlite3": "^7.6.4",
    "@types/jest": "^29.0.0",
    "@types/luxon": "^3.2.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "better-sqlite3": "^9.0.0",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "release-it": "*",
    "rimraf": "^5.0.0",
    "rollup": "^4.1.4",
    "rollup-plugin-node-externals": "^7.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  }
}
